# Main Player
import random
import time

print("Enter a username below: ")
username = input()

print(f"Welcome to the game {username}!")

# Player Stats
power_level = 100

menu = True
leveling = False


class Chicken:
    chick_level = random.randrange(1, 3)
    chick_power = 35
    if chick_level == 3:
        chick_power = 55
    chick_exp_given = 3


class Wolf:
    wolf_level_range = random.randrange(4, 10)
    wolf_level = wolf_level_range
    wolf_power = 110
    if wolf_level >= 7:
        wolf_power = 165
    wolf_exp_given = 12


while menu:
    if input("""CHOOSE ONE OF THE FOLLOWING: 
    |  STATS  |  FIGHT (type twice) |  
    """) == "STATS":
        menu = False
        print(f"""HERE ARE {username}'s STATS:
        POWER = {power_level} TOTAL POWER""")

        if input("""TYPE MENU TO RETURN
        """) == "MENU":
            menu = True
    elif input(""" 
    """) == "FIGHT":
        menu = False
        if input("""CHOOSE A MONSTER
|  CHICKEN (lvl 1)  |  WOLF (lvl 4 - 9) (TYPE TWICE) |  
        """) == "CHICKEN":
            print("SEARCHING FOR A CHICKEN")
            time.sleep(2)
            print("""FOUND A CHICKEN""")
            print("CHICKEN STATS = LEVEL ", Chicken.chick_level, " POWER ", Chicken.chick_power)
            if power_level > Chicken.chick_power:
                print("FIGHTING THE CHICKEN")
                time.sleep(1.5)
                power_level += 5
                print(f"""YOU BEAT THE CHICKEN!
                GAINED +5 POWER
                WELL DONE {username}!""")
                menu = True

        if input("""
         """) == "WOLF":
            print("SEARCHING FOR A WOLF")
            time.sleep(2)
            print("""FOUND A WOLF""")
            print("WOLF STATS = LEVEL ", Wolf.wolf_level, " POWER ", Wolf.wolf_power)
            if power_level > Wolf.wolf_power:
                print("FIGHTING THE WOLF")
                time.sleep(1.5)
                power_level += 20
                print(f"""YOU BEAT THE WOLF!
                GAINED +20 POWER
                WELL DONE {username}!""")
                menu = True
            else:
                print("YOUR POWER IS TOO LOW TO FIGHT THIS WOLF")
                menu = True
